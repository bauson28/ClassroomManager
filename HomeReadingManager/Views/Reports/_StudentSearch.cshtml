    @Html.ActionLink("Back to list", "Index", new { reportType = 6, libraryId = Model.LibraryId })
    <table class="table">
        <tr>
            <th colspan="4" style="text-align:center; text-decoration-color:azure">
                <h4>Students starting  @Html.DisplayFor(mbox=>Model.SearchString)...</h4>
            </th>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentSearchList.FirstOrDefault().FirstName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.StudentSearchList.FirstOrDefault().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentSearchList.FirstOrDefault().ClassId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.StudentSearchList)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.ClassName
                </td>
                <td>
                    @Html.ActionLink("Select", "Index", new { studentId = item.StudentId, student = item.Student, reportType = 6, school = Model.School, libraryId = Model.LibraryId })

                </td>
            </tr>
        }
    </table>
    @Html.PagedListPager((IPagedList)Model.StudentSearchList, page => Url.Action("Index", new { reportType = 6, searchString = Model.SearchString, school = Model.School, libraryId = Model.LibraryId, searchPage = page }))

    @*</div>
        </div>*@
}

