    $(function () {
        $('.closeModel').click(function () {
            $(this).removeData('bs.modal');
           
            $('#modal-container').modal('hide');
        });
    });

    $(function () {
        $('.focus :input').focus();
    });


    $(function () {
        $('.hideShow').on('click', function (evt) {
            evt.preventDefault();
            evt.stopPropagation();
           
            var id = $(this).attr('data-Id');
            if ($(this).text() == "Show details") {
                $('#' + id).show();
                $(this).text("Hide details");
            }
            else {
                $('#' + id).hide();
                $(this).text("Show details");
            }
        });
    });
</script>



