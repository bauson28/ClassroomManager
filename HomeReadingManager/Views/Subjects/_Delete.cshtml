@model HomeReadingManager.ViewModels.SubjectDelete
@*@model HomeReadingManager.Models.Subject*@
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ModalPopup.cshtml";
}

<div class="modal-body">
    <div class="alert alert-warning">
        @using (Html.BeginForm())
        {

            <h2>School Reports</h2>
            @Html.HiddenFor(m=>m.ReturnId)
            @Html.HiddenFor(model => model.GradeReportId)
            @*<h3>Are you sure you want to delete this assessment area?</h3>*@
            <h3>@Html.DisplayFor(model => model.Message)</h3>
            <h4>@Html.DisplayFor(model => model.Message2)</h4>
            <div>
              
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayFor(model => model.Type)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                       
                    </div>
                }
            </div>
        }
    </div>
</div>

